    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/src/index.js",
            "outFiles": [
                "${workspaceFolder}/build/src/*.js.map",
                "${workspaceFolder}/build/src/**/*.js.map",
                "${workspaceFolder}/build/src/**/**/*.js.map"
            ],
            "runtimeVersion": "16.14.0",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Test Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/test.js",
            "outFiles": [
                "${workspaceFolder}/build/*.js.map",
                "${workspaceFolder}/build/**/*.js.map",
                "${workspaceFolder}/build/**/**/*.js.map"
            ],
            "runtimeVersion": "16.14.0",
        }
    ]
}